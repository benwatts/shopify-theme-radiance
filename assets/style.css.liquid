  }

.variants-wrapper{
  text-align: right;
  margin: 0 0 8px 0;
  }
.selector-wrapper{
  margin: 0 0 8px 0 ;  
  }
.selector-wrapper label{
  margin: 0 5px 0 0;
  text-align: right;
  }

#add-to-cart-msg{
  background: {{ settings.added_to_cart_bg }};
  padding: 10px;
  display: none;
  margin: 0;
  }    

#product-information #sharing{
  margin: 16px 0 0 0;
  padding: 16px 0 0 0;

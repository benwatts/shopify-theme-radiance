	outline: none;
	line-height: 0;
	vertical-align: top;
	}

#fancybox-frame {
	width: 100%;
	height: 100%;
	border: none;
	display: block;
	}

#fancybox-left, #fancybox-right {
	position: absolute;
	bottom: 0px;
	height: 100%;
	width: 35%;
	cursor: pointer;
	outline: none;
	background: transparent url('blank.gif');
	z-index: 1102;
	display: none;
	}


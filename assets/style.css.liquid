	}	
.variants select{
	color: #333;
	padding: 1px;
	float: right;
	}	
.variants .disabled{
	display: none;
	}
	
.ie6 .variants div,
.ie7 .variants div{
	overflow: hidden;
	height: 1%;
	margin: 0 0 8px 0;
	}	

	
	
